<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unown.finalunown">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".ProductSearchActivity"
            android:label="@string/title_activity_user_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity android:name=".CartActivity" />
        <activity android:name=".EditPantryActivity" />
        <activity
            android:name=".SearchedProductActivity"
            android:label="@string/title_activity_searched_product"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".BuyerProfileActivity"
            android:label="@string/title_activity_buyer_profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SellerProfileActivity"
            android:label="@string/title_activity_seller_profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".OrderReqNavActivity"
            android:label="@string/title_activity_order_req_nav"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PantryNavActivity"
            android:label="@string/title_activity_pantry_nav"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CartNavActivity"
            android:label="@string/title_activity_cart_nav"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>