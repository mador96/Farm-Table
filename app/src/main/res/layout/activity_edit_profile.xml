<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unown.finalunown.EditProfileActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@android:color/background_light"
        android:id="@+id/profilePicture"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:text="Take Picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/takePictureButton"
        android:onClick="takePicture"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/imageLibraryButton"
        android:layout_toEndOf="@+id/profilePicture"
        android:layout_marginStart="28dp" />

    <Button
        android:text="Image Library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLibraryButton"
        android:onClick="getImageFromLibrary"
        android:layout_alignBottom="@+id/profilePicture"
        android:layout_alignEnd="@+id/takePictureButton"
        android:layout_marginBottom="51dp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageLibraryButton"
        android:layout_below="@+id/profilePicture"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="94dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameEditText"
        android:layout_below="@+id/nameEditText"
        android:layout_marginTop="87dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Location" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profilePicture"
        android:layout_below="@+id/locationEditText"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="122dp"
        android:ems="10"
        android:inputType="textShortMessage"
        android:text="Description here...." />

    <TextView
        android:id="@+id/nameLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_alignBaseline="@+id/nameEditText"
        android:layout_alignBottom="@+id/nameEditText"
        android:layout_toStartOf="@+id/profilePicture" />

    <TextView
        android:id="@+id/locationLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:layout_above="@+id/descriptionEditText"
        android:layout_alignStart="@+id/descriptionEditText" />

    <TextView
        android:id="@+id/descriptionLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:text="Description:"
        android:layout_below="@+id/locationLabelTextView"
        android:layout_alignStart="@+id/descriptionEditText" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:text="Save Changes" />

</RelativeLayout>
